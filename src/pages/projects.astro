---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { projects } from "./../../gh_projects_data/projects.json";

// capitalize the word
const capitalize = (word) => {
  return word.charAt(0).toUpperCase() + word.slice(1);
};
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Pinned Projects</div>
  </div>
  {
    projects.map((project) => (
      <>
        <HorizontalCard
          title={capitalize(project.name)}
          img={`./../../gh_projects_data/screens/${project.image}`}
          desc={project.description || ""}
          url={project.homepage_url}
          repo_url={project.repo_url}
          target="_self"
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
